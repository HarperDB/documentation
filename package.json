{
	"name": "@harperdb/documentation",
	"private": true,
	"scripts": {
		"format": "prettier --write 'docs/**/*' package.json",
		"site:install": "cd site && npm install",
		"site:dev": "bash site/scripts/dev-local.sh",
		"site:build": "bash site/scripts/build-local.sh",
		"site:serve": "bash site/scripts/serve-local.sh",
		"site:clear": "cd site && npm run clear",
		"sync:to-harperdb": "bash site/scripts/sync-and-convert.sh",
		"sync:to-harperdb:sample": "bash site/scripts/sync-and-convert.sh -s",
		"sync:to-harperdb:dry": "bash site/scripts/sync-and-convert.sh -d",
		"preview:harperdb": "cd site && bash scripts/preview-harperdb-docs.sh"
	},
	"devDependencies": {
		"@harperdb/code-guidelines": "^0.0.2",
		"prettier": "^3.6.1"
	},
	"prettier": "@harperdb/code-guidelines/prettier"
}
